{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "paths": {
      "@flowtomic/ui": ["./packages/ui/src"],
      "@flowtomic/logic": ["./packages/logic/src"],
      "@flowtomic/cli": ["./cli/src"]
    }
  },
  "files": [],
  "include": [],
  "exclude": ["node_modules", "dist", "build", "**/*.tsbuildinfo"],
  "references": [{ "path": "./packages/ui" }, { "path": "./packages/logic" }, { "path": "./cli" }]
}
