{
  "name": "flowtomic",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "cli"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:ui": "turbo run build --filter=flowtomic/ui",
    "build:logic": "turbo run build --filter=flowtomic/logic",
    "build:cli": "turbo run build --filter=flowtomic",
    "fix:all": "biome check --write . && biome format --write . && turbo run lint:fix format",
    "lint": "biome check . && turbo run lint",
    "lint:fix": "biome check --write . && turbo run lint:fix",
    "format": "biome format --write . && turbo run format",
    "format:check": "biome format . && turbo run format:check",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "registry:build": "bun run registry/build-registry.ts",
    "registry:server": "bun run registry/server.ts",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "dedupe": "bun install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-a11y": "^10.0.6",
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/addon-links": "^10.0.6",
    "@storybook/addon-onboarding": "^10.0.6",
    "@storybook/addon-vitest": "^10.0.6",
    "@storybook/react-vite": "^10.0.6",
    "@types/node": "^24.7.0",
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "storybook": "^10.0.6",
    "tailwindcss": "^4.1.14",
    "turbo": "^2.6.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.553.0",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.11.1",
    "react-hook-form": "^7.66.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  }
}
