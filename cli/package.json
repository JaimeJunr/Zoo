{
  "name": "flowtomic",
  "version": "0.1.0",
  "description": "CLI para instalação de componentes, hooks e blocks do Flowtomic",
  "type": "module",
  "bin": {
    "flowtomic": "./dist/cli.js",
    "flowtomic-cli": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JaimeJunr/Flowtomic.git"
  },
  "keywords": [
    "flowtomic",
    "cli",
    "components",
    "ui",
    "react",
    "typescript",
    "shadcn",
    "blocks",
    "registry",
    "atomic",
    "flow"
  ],
  "author": "JaimeJunr",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "build": "bun build ./src/cli.ts --outdir ./dist --target node --format esm --minify --outfile ./dist/cli.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0",
    "inquirer": "^10.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.7.0",
    "typescript": "~5.9.3"
  }
}

